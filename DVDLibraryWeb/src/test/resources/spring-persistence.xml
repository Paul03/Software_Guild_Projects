<?xml version="1.0" encoding="UTF-8"?> <!-- this file is like applicationContext.xml -->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!-- Bean definitions go here -->

    <bean id="dataSource" class="org.apache.commons.dbcp2.BasicDataSource">
        <property name="driverClassName" value="com.mysql.jdbc.Driver" />
        <property name="url" value="jdbc:mysql://localhost:3306/DVDLibrary_test" />
        <property name="username" value="root" />
        <property name="password" value="apprentice" />
        <property name="initialSize" value="5" />
        <property name="maxTotal" value="10" />
    </bean>

    <bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="dataSource" />
    </bean>

    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="dataSource" />
    </bean>

    <bean id="dvdDao" class="com.thesoftwareguild.dvdlibraryweb.dao.DvdDaoDbImpl">
        <constructor-arg ref="jdbcTemplate" />
    </bean>

    <bean id="noteDao" class="com.thesoftwareguild.dvdlibraryweb.dao.NoteDaoInMemoryImpl" >
        <constructor-arg ref="dvdDao" />
    </bean>

    <bean id="userDao" class="com.thesoftwareguild.dvdlibraryweb.dao.UserDaoDbImpl">
    </bean>


</beans>